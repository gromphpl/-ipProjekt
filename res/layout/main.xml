<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center" android:weightSum="1">


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biegnij"
            android:id="@+id/btnBiegnij" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ustal Harmonogram Biegów"
            android:id="@+id/btnUstawDateCzas" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokaż zaplanowane biegi"
            android:id="@+id/btnPokazZaplanowaneBiegi" android:layout_gravity="center_horizontal"/>
</LinearLayout>