<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center" android:weightSum="1" android:background="@drawable/tlo">


    <Button
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="Biegnij"
            android:id="@+id/btnBiegnij" android:layout_gravity="center_horizontal" android:background="#077cff"
            android:layout_weight="0.04" android:textStyle="bold" android:layout_marginTop="120dp"/>
    <Button
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="Ustal harmonogram Biegów"
            android:id="@+id/btnUstawDateCzas" android:layout_gravity="center_horizontal" android:background="#007cff"
            android:layout_weight="0.04" android:textStyle="bold" android:layout_marginTop="20dp"/>
    <Button
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="Pokaż zaplanowane biegi"
            android:id="@+id/btnPokazZaplanowaneBiegi" android:layout_gravity="center_horizontal"
            android:background="#007cff" android:layout_weight="0.04" android:textStyle="bold"
            android:layout_marginTop="20dp"/>
    <Button
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="Historia biegów"
            android:id="@+id/btnHistoriaBiegow" android:layout_weight="0.04"
            android:textStyle="bold" android:background="#007cff" android:layout_marginTop="20dp"/>
    <Button
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="Statystyki"
            android:id="@+id/btnStatystyki"
            android:textStyle="bold" android:background="#007cff" android:layout_weight="0.04"
            android:layout_marginTop="20dp"/>
    <Button android:layout_width="265dp" android:layout_height="wrap_content" android:text="Personalizuj"
            android:id="@+id/btnPersonalizuj" android:background="#007cff"
            android:layout_weight="0.04" android:textStyle="bold" android:singleLine="false"
            android:layout_marginTop="20dp"/>
</LinearLayout>